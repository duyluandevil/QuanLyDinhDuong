
@{
    ViewBag.Title = "TaiKhoan";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<style>
    .b {
        width: 70%;
        float: right;
        margin-right: 100px;
    }
</style>
<div class="content">
    <div class="container-fluid">
        <div class="b">
            <div class="row">
                <a href="@Url.Action("ThemTaiKhoan","Admin")">Thêm tài khoản mới</a>
            </div>
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Tài khoản</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                <th>
                                    ID
                                </th>
                                <th>
                                    Họ và tên
                                </th>
                                <th>
                                    Số điện thoại
                                </th>
                                <th>
                                    Giới tính
                                </th>
                                <th>
                                    Mã chức vụ
                                </th>
                                <th>
                                    Chức năng
                                </th>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                        <tr>
                            <td>
                                @item.IDTAIKHOAN
                            </td>
                            <td>
                                @item.HOTEN
                            </td>
                            <td>
                                @item.SDT
                            </td>
                            <td>
                                @item.GIOITINH
                            </td>
                            <td class="text-primary">
                                @item.MACHUCVU
                            </td>
                            <td class="text-primary">
                                <a href="@Url.Action("XoaTaiKhoan","Admin", new { @MaTK = @item.IDTAIKHOAN})" class="fa fa-remove" style="margin-left:15px; margin-right:20px;"></a>
                                <a href="@Url.Action("SuaTaiKhoan","Admin", new { @MaTK = @item.IDTAIKHOAN})" class="fa fa-edit"></a>
                            </td>
                        </tr>}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>