@model QuanLyDinhDuong.Models.THUCPHAM
@{
    ViewBag.Title = "ThemThucPham";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<style>
    .b {
        width: 70%;
        float: right;
        margin-right: 100px;
    }

    .TenThucDon {
        width: 300px;
    }

    .Chonfile {
        background-color: indigo;
        color: white;
        padding: 0.5rem;
        font-family: sans-serif;
        border-radius: 0.3rem;
        cursor: pointer;
        margin-top: 1rem;
    }
</style>

@*@using (Html.BeginForm("SuaThucPham","Admin", FormMethod.Post, new { @enctype = "multipart/form-data"}))*@
@using (Html.BeginForm("ThemThucPham", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @*@Html.AntiForgeryToken()*@

    @Html.ValidationSummary()
    <div class="content">
        <div class="container-fluid">
            <div class="b">
                <div class="row">
                    <div class="row">
                        <a href="@Url.Action("ThucPham","Admin")">Trở về danh sách thực phẩm</a>
                    </div>
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title ">Thêm thực phẩm</h4>
                                <p class="card-category"></p>
                            </div>
                            <div class="card-body">


                                <div class="row">
                                    <div class="col-xl-3">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Mã thực phẩm</label>
                                            <input type="text" name="MATHUCPHAM" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-xl-9">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Tên thực phẩm</label>
                                            <input type="text" name="TENTHUCPHAM" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <label for="myfile">Select a file:</label>
                                    <input type="file" id="myfile" name="myfile">
                                </div>
                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="form-group">
                                            <div>
                                                <label for="myfile">Ảnh bìa:</label>
                                                <input type="file" id="myfile" name="fileupload">
                                                @ViewBag.Thongbao
                                            </div>
                                        </div>
                                    </div>
                                </div>                                
                                <div class="row">
                                    <div class="col-xl-3">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Đạm</label>
                                            <input type="number" step="0.01" name="DAM" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-xl-3">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Béo</label>
                                            <input type="number" step="0.01" name="BEO" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-xl-3">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Xơ</label>
                                            <input type="number" step="0.01" name="XO" class="form-control">
                                        </div>
                                    </div>

                                    <div class="col-xl-3">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Calo</label>
                                            <input type="number" step="0.01" name="CALO" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Mã loại thực phẩm</label>
                                            <select class="form-control" name="ChonMaLoai">
                                                @foreach (var item in ViewBag.LOAITHUCPHAMs)
                                                {
                                                    <option value="@item.MALOAITHUCPHAM">@item.TENLOAITHUCPHAM</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary pull-right">Thêm thực phẩm mới</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



