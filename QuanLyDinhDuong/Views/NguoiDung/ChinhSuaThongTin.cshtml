<style>
    .sidebar-a {
        width: 80%;
        float: right;
        margin-top: 40px;
    }
</style>
@using (Html.BeginForm())
{
    <div class="content">
        <div class="container-fluid">
            <div class="sidebar-a">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title">Chỉnh sửa thông tin</h4>
                                @*<p class="card-category">Thông tin trang cá nhân</p>*@
                            </div>
                            <div class="card-body">
                                <form>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Tên đăng nhập</label>
                                                <input type="text" class="form-control" value="@tk.IDTAIKHOAN" disabled>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Địa chỉ email</label>
                                                <input name="email" type="email" class="form-control" value="@tk.EMAIL">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Số điện thoại</label>
                                                <input name="sdt" type="text" class="form-control" value="@tk.SDT">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Họ Tên</label>
                                                <input name="hoten" type="text" class="form-control" value="@tk.HOTEN">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Giới tính</label>
                                                <div class="form-check" style="color: blueviolet; text-align: center">
                                                    <input @*class="form-check-input"*@ type="radio" name="RadioGioiTinh" id="RadioNam" value="Nam">
                                                    <label class="form-check-label" for="RadioNam">
                                                        Nam
                                                    </label>
                                                    <input @*class="form-check-input"*@ type="radio" name="RadioGioiTinh" id="RadioNu" value="Nữ" checked>
                                                    <label class="form-check-label" for="RadioNu">
                                                        Nữ
                                                    </label>
                                                </div>
                                                @*<input name="gioitinh" type="text" class="form-control" value="@tk.GIOITINH">*@
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Ngày sinh</label>
                                                <input name="ngaysinh" type="date" class="form-control" value="@tk.NGAYSINH">
                                            </div>
                                        </div>
                                    </div>

                                    <h4>Thông tin cơ thể</h4>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Chiều cao</label>
                                                <input name="chieucao" type="number" step="1" class="form-control" value="@bn.CHIEUCAO">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Cân nặng</label>
                                                <input name="cannang" type="number" step="1" class="form-control" value="@bn.CANNANG">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">BMI</label>
                                                <input type="text" class="form-control" value="@bn.BMI" disabled>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Lượng calo trong 1 ngày</label>
                                                <input type="text" class="form-control" value="@bn.CALO" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary pull-right">Lưu thông tin</button>
                                    <a href="@Url.Action("TrangCaNhan","NguoiDung")" class="btn btn-primary pull-left">Hủy</a>
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

